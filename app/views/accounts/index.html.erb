<p class="text-success" id="notice"><%= notice %></p>

<div class="pull-left">
  <h3 class="c-page-title">用户信息列表</h3>
</div>

<%#= link_to '新增', new_account_path, class: 'c-btn-new pull-right' %>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>name</th>
      <th>电话</th>
      <th>email</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.phone_num %></td>
        <td><%= account.email %></td>
        <td class="c-operations c-word-keep-all">
          <%= link_to '编辑', edit_account_path(account) %>
          <%= link_to '删除', account, method: :delete, data: { confirm: '确认删除?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>